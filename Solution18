//Write your code here
class Calculator{
    int power(int n,int p)throws Exception{
     int res=1;

     if(n < 0 || p < 0){

         throw new Exception("n and p should be non-negative");

     }
        if(p==0)
            {
            return 1;
        }
        if(n==0){
            return 0;
        }
        
     else
     {
    for(int i=1;i<=p;i++){

        res =  res * n ;
        }
     }
     return res;

 }
}
